import { MyRect } from '.';

width := 200;
height := 200;

Group {
    width := 200;
    height := 200;

    dataset data_0: SELECT * FROM (VALUES
            (1, 'red'),
            (2, 'purple'),
            (3, 'yellow')
        ) foo("a", "b");

    val pi: 3.14159;

    comp g1: Group {
        x := 20;
        y := 20;

        comp r1: MyRect {
            x := 30;
            y := 30;
            width := 100;
            height := 100;
            fill := 'rgba(64, 64, 64, 0.3)';
        }

        comp a1: Arc {
            data := SELECT * FROM @data_0;

            expr a_minus_1: "a" - 1;

            x := @a_minus_1 * 40;
            y := @a_minus_1 * 40 + 50;


            start_angle := "a" * @pi / 6.0;
            end_angle := @start_angle + @pi / 3.0;

            inner_radius := 30;
            outer_radius := 50;
            fill := "b";
            stroke_width := 4;
            stroke := 'black';

            clip := false;
            zindex := 1 + 2;
        }
    }
}
